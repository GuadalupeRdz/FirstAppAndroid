<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"

    android:paddingBottom="@dimen/paddingTopBottonLayout"
    android:paddingLeft="@dimen/paddingRigthLeftLayout"
    android:paddingRight="@dimen/paddingRigthLeftLayout"
    android:paddingTop="@dimen/paddingTopBottonLayout"

    tools:context="com.hetherlat.numerallove.SecondActivityTest">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/YellowGreen"

        android:layout_weight=".3"
        android:padding="@dimen/pading_title"
        android:text="@string/title_activity_second_activity_test"
        android:textColor="@color/DarkRed"
        android:textSize="@dimen/xxlarge" />

    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
        android:layout_weight=".7">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txvNumeroPersona1"

            android:layout_weight=".2"

            android:text="@string/DemoString"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txvNumeroPersona2"

            android:layout_weight=".2"

            android:text="@string/DemoString"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txvResumenCompatibilidad"

            android:layout_weight=".6"

            android:text="@string/DemoString"
            />

    </LinearLayout>


</LinearLayout>
